<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_GameDifficulty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ActivityMainMenu">

    <ImageView
        android:id="@+id/imageView_Title"
        android:layout_width="352dp"
        android:layout_height="135dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/sample_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainMenu"
        android:visibility="gone" />

    <Button
        android:id="@+id/cashier_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cashier"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/game_Button"
        android:layout_width="296dp"
        android:layout_height="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="i"
        android:scaleType="fitCenter"
        android:src="@drawable/neco" />

    <ImageButton
        android:id="@+id/about_Button"
        android:layout_width="293dp"
        android:layout_height="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="i"
        android:scaleType="fitCenter"
        android:src="@drawable/neco" />
</LinearLayout>